@{
    ViewData["Title"] = "Orders";
}

<head>
    <link rel="stylesheet" href="~/css/orders.css" />
</head>

<main class="content">
    <div class="orders-container">
        <!-- Add page title -->
        <div class="page-title">
            <h1>Order Management</h1>
        </div>

        <div class="controls-section">
            <div class="search-filter-container">
                <div class="search-box">
                    <i class="fas fa-search"></i>
                    <input type="text" placeholder="Search orders..." id="orders-search">
                </div>
                <div class="filter-box">
                    <select id="orders-status-filter">
                        <option value="all">All Statuses</option>
                        <option value="pending">Pending</option>
                        <option value="shipped">Shipped</option>
                        <option value="delivered">Delivered</option>
                        <option value="cancelled">Cancelled</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="orders-grid">
            <table class="orders-table">
                <thead>
                    <tr>
                        <th>Order ID</th>
                        <th>Customer Name</th>
                        <th>Order Date</th>
                        <th>Status</th>
                        <th>Total</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody id="orders-list">
                    <!-- Hardcoded dummy data -->
                    <tr class="orders-row">
                        <td class="orders-id">1</td>
                        <td class="orders-customer">Alice Johnson</td>
                        <td class="orders-date">2023-10-01</td>
                        <td class="orders-status">Pending</td>
                        <td class="orders-total">$150.00</td>
                        <td class="orders-actions">
                            <button class="action-btn preview-btn" title="Preview">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="action-btn edit-btn" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete-btn" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                    <tr class="orders-row">
                        <td class="orders-id">2</td>
                        <td class="orders-customer">Bob Smith</td>
                        <td class="orders-date">2023-10-02</td>
                        <td class="orders-status">Shipped</td>
                        <td class="orders-total">$200.00</td>
                        <td class="orders-actions">
                            <button class="action-btn preview-btn" title="Preview">
                                <i class="fas fa-eye"></i>
                            </button>
                            <button class="action-btn edit-btn" title="Edit">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="action-btn delete-btn" title="Delete">
                                <i class="fas fa-trash-alt"></i>
                            </button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</main>