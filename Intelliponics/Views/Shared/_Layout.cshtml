<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Intelliponics</title>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Intelliponics.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <div class="dashboard">
        <nav class="sidebar">
            <div class="sidebar-header">
                <h2>Dashboard</h2>
                <button class="toggle-btn">
                    <i class="fas fa-bars"></i>
                </button>
            </div>
            <ul class="nav-links">
                <li><a asp-controller="Admin" asp-action="Personnel"><i class="fas fa-users"></i> Personnel</a></li>
                <li><a asp-controller="Admin" asp-action="Chat"><i class="fas fa-comments"></i> Communication</a></li>
                <li><a asp-controller="Admin" asp-action="Inventory"><i class="fas fa-box"></i> Inventory</a></li>
                <li><a asp-controller="Admin" asp-action="Orders"><i class="fas fa-shopping-cart"></i> Orders</a></li>
                <li><a asp-controller="Admin" asp-action="Payments"><i class="fas fa-credit-card"></i> Payments</a></li>
                <li><a asp-controller="Admin" asp-action="Shipping"><i class="fas fa-truck"></i> Shipping & Delivery</a></li>
                <li><a asp-controller="Admin" asp-action="Hydroponics"><i class="fas fa-seedling"></i> Hydroponics</a></li>
                <li><a asp-controller="Admin" asp-action="Analytics"><i class="fas fa-chart-line"></i> Analytics & Reporting</a></li>
            </ul>
        </nav>
        <main class="content">
            @RenderBody()
        </main>
    </div>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

